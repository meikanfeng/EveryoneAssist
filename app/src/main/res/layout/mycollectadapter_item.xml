<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <com.example.everyoneassist.Layout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_07"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诚信服务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <com.example.everyoneassist.Layout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@mipmap/home_32"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="100%h" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/home_32"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="100%h" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@mipmap/home_32"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="100%h" />

                </com.example.everyoneassist.Layout.PercentLinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="跑腿代办"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/service_03"
            android:drawablePadding="5dp"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="29.3公里" />

    </com.example.everyoneassist.Layout.PercentLinearLayout>

    <com.example.everyoneassist.Layout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@mipmap/service_07"
            app:layout_heightPercent="25%w"
            app:layout_widthPercent="33%w" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:src="@mipmap/service_09"
            app:layout_heightPercent="25%w"
            app:layout_widthPercent="33%w" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/service_11"
            android:padding="2dp"
            app:layout_heightPercent="25%w"
            app:layout_widthPercent="33%w" />

    </com.example.everyoneassist.Layout.PercentLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ta的服务内容:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="深圳卓越服务管理有限公司，经公安备案，工商注册，是深圳市政府民生工程12349和核心服务商，是福田区政府便民生活平台"
            android:textColor="@color/deep_gray"
            android:textSize="@dimen/text_small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/phone_auth_dleft"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/autonym_auth_dleft"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/weibo_auth_dleft"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/skill_auth_dleft"
            android:layout_weight="1"/>

    </LinearLayout>

    <com.example.everyoneassist.Layout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/credit_auth_dleft"
            app:layout_widthPercent="25%w"/>

    </com.example.everyoneassist.Layout.PercentLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="价格：120.00次"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_big"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="应邀时间：2016-11-18 12:00"
                android:layout_marginTop="5dp"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/text_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:text="聊一聊"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/white"
                android:background="@drawable/skill_item_orange"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="立即应邀"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal"
                android:layout_margin="4dp"
                android:background="@drawable/skill_item_orange"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>