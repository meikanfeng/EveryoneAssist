<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_big"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="12dp"
        android:text="@string/nearby_need"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiving_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="去附近美宜佳买一包芙蓉王。"
            android:textColor="@color/black"
            android:padding="2dp"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiving_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="到达时间：2017/1/4 18:02"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:padding="2dp"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/receiving_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费:28元"
                android:textColor="@color/deep_gray"
                android:padding="2dp"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/receiving_item_addr_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiving_addr_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/theme"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:text="购买地址：龙岗义乌203号"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/deep_gray"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/receiving_addr_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/orange"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:text="收货地址：龙岗社区208号"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/receiving_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_gray"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:text="姓名：潘先生"/>

            <TextView
                android:id="@+id/receiving_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_gray"
                android:maxLines="1"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:text="联系电话：13530914296"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>