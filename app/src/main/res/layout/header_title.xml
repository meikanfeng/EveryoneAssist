<?xml version="1.0" encoding="utf-8"?>
<com.example.everyoneassist.Layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/left_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:layout_widthPercent="60%h"
        app:layout_heightPercent="60%h"
        app:layout_marginLeftPercent="20%h"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="title"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_sbig"/>

    <FrameLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/appbar_padding_top"
        android:visibility="invisible"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big" />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="match_parent"
            android:src="@drawable/ic_chevron_right_black_20dp"
            android:layout_height="match_parent" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>

</com.example.everyoneassist.Layout.PercentRelativeLayout>