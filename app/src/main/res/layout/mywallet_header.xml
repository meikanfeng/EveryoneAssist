<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.everyoneassist.Layout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:gravity="bottom|left"
            android:orientation="vertical"
            app:layout_heightPercent="22%h"
            app:layout_paddingPercent="3%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额（元）"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120.05"
                android:textColor="@color/white"
                android:textSize="35sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mywallet_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/wallet_03"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="充值"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big"
            app:layout_paddingLeftPercent="3%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white" />

        <TextView
            android:id="@+id/mywallet_withdraw_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/wallet_06"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big"
            app:layout_paddingLeftPercent="3%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/thin_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="收支明细"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big" />

    </com.example.everyoneassist.Layout.PercentLinearLayout>

</LinearLayout>