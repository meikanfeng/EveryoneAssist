<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_manual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.everyoneassist.Activity.UserManualActivity">

    <include layout="@layout/header_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/renren_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="人人帮使用协议"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/server_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="服务者使用协议"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/need_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="需求者使用协议"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/skill_manager_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="技能管理交易流程"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/need_manager_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="需求管理交易流程"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/auditing_criterion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="审核规范"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/service_charge_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="服务费抽取说明"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

        <TextView
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:text="常见问题"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_chevron_right_black_20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white"/>

    </LinearLayout>

</LinearLayout>
