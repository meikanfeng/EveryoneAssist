<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/nearby_store"
            android:textColor="@color/black"
            android:textSize="@dimen/text_big" />

        <com.example.everyoneassist.Layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.example.everyoneassist.View.CircleImageView
                android:id="@+id/homeitem_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_07"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="15%w" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeitem_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="诚信服务"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/homeitem_works"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="跑腿代办"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homeitem_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="25分钟前"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/homeitem_rank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@mipmap/home_32" />

                    <ImageView
                        android:id="@+id/homeitem_rank2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@mipmap/home_32" />

                    <ImageView
                        android:id="@+id/homeitem_rank3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@mipmap/home_32" />

                </LinearLayout>

            </LinearLayout>

        </com.example.everyoneassist.Layout.PercentLinearLayout>

        <com.example.everyoneassist.Layout.PercentLinearLayout
            android:id="@+id/imagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeitem_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/home_10"
                app:layout_heightPercent="25%w" />

            <ImageView
                android:id="@+id/homeitem_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/home_12"
                app:layout_heightPercent="25%w" />

            <ImageView
                android:id="@+id/homeitem_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/home_14"
                app:layout_heightPercent="25%w" />

        </com.example.everyoneassist.Layout.PercentLinearLayout>

        <TextView
            android:id="@+id/homeitem_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="今天上午8:30分一直有空，有需要帮忙的请联系我！"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/thin_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/homeitem_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/home_20"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="105"
                android:textColor="@color/theme" />

            <TextView
                android:id="@+id/homeitem_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/home_23"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="02"
                android:textColor="@color/theme" />

            <TextView
                android:id="@+id/homeitem_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/home_26"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="29.3公里"
                android:textColor="@color/theme" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/thin_white" />

</LinearLayout>
